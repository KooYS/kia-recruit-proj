{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.cjs",
    ".next/types/**/*.ts",
    "postcss.config.mjs",
    "src/app/_components/common/images.txs"
  ],
  "exclude": [
    "node_modules"
  ]
}