{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@repo/ui/components/*": [
        "./src/components/*"
      ],
      "@repo/ui/lib/*": [
        "./src/lib/*"
      ],
      "@repo/ui/hooks/*": [
        "./src/hooks/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}